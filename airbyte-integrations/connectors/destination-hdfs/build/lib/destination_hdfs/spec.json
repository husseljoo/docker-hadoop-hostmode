{
  "documentationUrl": "https://docs.airbyte.com/integrations/destinations/hdfs",
  "supported_destination_sync_modes": ["overwrite", "append"],
  "supportsIncremental": true,
  "connectionSpecification": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Destination Hdfs",
    "type": "object",
    "required": ["format", "host", "username", "port", "destination_path"],
    "additionalProperties": false,
    "properties": {
      "format": {
        "type": "string",
        "enum": ["csv"],
        "default": "csv",
        "title": "File Format",
        "description": "The format of the file that will be written to HDFS."
      },
      "host": {
        "title": "Host",
        "description": "Hostname of the HDFS server.",
        "type": "string",
        "order": 0
      },
      "port": {
        "title": "Port",
        "description": "Port of the HDFS server.",
        "type": "integer",
        "minimum": 0,
        "maximum": 65536,
        "default": 9870,
        "examples": [9870],
        "order": 1
      },
      "username": {
        "title": "Username",
        "description": "User that will write the HDFS file.",
        "type": "string",
        "order": 2
      },
      "destination_path": {
        "title": "Destination path",
        "type": "string",
        "description": "Path to the HDFS directory where the file will be written.",
        "examples": ["/csv_data"],
        "order": 3
      }
    }
  }
}
